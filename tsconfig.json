{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@/*": ["src/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_module", "dist"]
}
